{
  "version": 2,
  "functions": {
    "api/*.js": {
      "maxDuration": 60
    }
  },
  "framework": "vite",
  "rewrites": [
    { 
      "source": "/api/gitlab/fetch-ci-metrics", 
      "destination": "/api/server.js" 
    },
    { 
      "source": "/api/gitlab/fetch-namespaces", 
      "destination": "/api/server.js" 
    },
    { 
      "source": "/api/saml-auth-init", 
      "destination": "/api/server.js" 
    },
    { 
      "source": "/api/saml-auth-status", 
      "destination": "/api/server.js" 
    },
    { 
      "source": "/api/test", 
      "destination": "/api/server.js" 
    },
    { 
      "source": "/api/debug", 
      "destination": "/api/server.js" 
    },
    { 
      "source": "/(.*)", 
      "destination": "/index.html" 
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "installCommand": "npm install",
  "buildCommand": "npm run build",
  "devCommand": "npm run dev"
}
