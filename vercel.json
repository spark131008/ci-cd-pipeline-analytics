{
  "version": 2,
  "builds": [
    { "src": "api/server.js", "use": "@vercel/node" },
    { "src": "dist/**", "use": "@vercel/static" }
  ],
  "routes": [
    { 
      "src": "/api/(.*)", 
      "dest": "api/server.js" 
    },
    { 
      "src": "/(.*)", 
      "dest": "/dist/index.html" 
    }
  ],
  "devCommand": "npm run dev",
  "buildCommand": "npm run build"
}
